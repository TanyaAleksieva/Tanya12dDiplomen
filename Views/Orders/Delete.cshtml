@model FleksTanya12d.Data.Order

@{
    ViewData["Title"] = "Изтриване";
}

<h1>Изтриване</h1>

<style>
    body {
        background: rgb(91,167,227);
        background: linear-gradient(0deg, rgba(91,167,227,1) 0%, rgba(135,223,255,1) 31%, rgba(198,238,255,1) 100%);
    }
</style>

<h3>Сигурен ли си, че искаш да изтриеш това?</h3>
<div>
    <h4>Поръчка</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Продукт
           @* @Html.DisplayNameFor(model => model.Products)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Products.Id)
        </dd>
        <dt class = "col-sm-2">
            Клиент
            @*@Html.DisplayNameFor(model => model.Users)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Users.Id)
        </dd>
        <dt class = "col-sm-2">
            Количество
           @* @Html.DisplayNameFor(model => model.Quantity)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            Поръчано
           @* @Html.DisplayNameFor(model => model.OrderedOn)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderedOn)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтрий" class="btn btn-danger" /> |
        <a asp-action="Index">Обратно към листа</a>
    </form>
</div>
